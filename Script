print("Script Executed")

local plr = game.Players.LocalPlayer

if plr.PlayerGui:FindFirstChild("Exploit board") then
  plr.PlayerGui:FindFirstChild("Exploit board"):Destroy()
end
  
local UI = Instance.new("ScreenGui",plr.PlayerGui)
UI.ResetOnSpawn = false
UI.Name = "Exploit board"
local MainFrame = Instance.new("Frame",UI)
MainFrame.Size = UDim2.new(0, 400,0, 250)
MainFrame.Position = UDim2.new(0.5,0,0.5,0)
MainFrame.AnchorPoint = Vector2.new(0.5,0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(42,42,42)
local TopBar = Instance.new("Frame",MainFrame)
TopBar.Size = UDim2.new(1, 0,-0.06, 38)
TopBar.BackgroundColor3 = Color3.fromRGB(32,32,32)
local ballOwnedText = Instance.new("TextLabel",MainFrame)
ballOwnedText.BackgroundColor3 = Color3.fromRGB(50,50,50)
