local dragging
local dragInput
local dragStart
local startPos
local glitching = false
local reaching = false
local playerHasBall = false


-- Functions --

local function update(input)
	local delta = input.Position - dragStart
	MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

local function getBall()
local args = {
    [1] = "NoobGlitch"
}

game:GetService("ReplicatedStorage"):WaitForChild("Client"):FireServer(unpack(args))

local args = {
    [1] = workspace:WaitForChild("TPS")
}

game:GetService("ReplicatedStorage"):WaitForChild("ChangeOwner"):FireServer(unpack(args))
end

local function checkForBall()
	local ball = workspace:FindFirstChild("TPS")
	if ball then
		if ball.Owner.Value == plr.Name or ball.Owner.Value == plr or ball.Owner.Value == plr.Character then
			ballOwnedText.Text = "Ball is owned: true"
			return ball
		else
            getBall()
			ballOwnedText.Text = "Ball is owned: false"
		end
	end
end

local function glitchBallFunction()
	local ball = checkForBall()
	if ball and glitching then
		ball.Position = Vector3.new(0,30,0)
		local bodyForce = ball:FindFirstChild("BodyForce")
		if bodyForce then
			bodyForce = Vector3.new(0,1000,0)
			ball.Velocity = Vector3.new(0,0,0)
		end
	end
end

local function reachingFunction()
    if reaching then
       getBall()
    end
end

local function bringBallFunction()
	local ball = checkForBall()
	if ball then
		local char = plr.Character
		if char then
			local bodyForce = ball:FindFirstChild("BodyForce")
			if bodyForce then
				bodyForce = Vector3.new(0,0,0)
				ball.Velocity = Vector3.new(0,0,0)
			end
			ball.CFrame = plr.Character.PrimaryPart.CFrame * CFrame.new(0,0,-5)
		end
	end
end

local function scoreGoalFunction()
	local ball = checkForBall()
	if ball then
		if plr.Team == game.Teams["Home"] or plr.Team == game.Teams["-Home GK"] then
			ball.Position = workspace.WorkspaceStadiumMap.Goal22.Position
		else
			ball.Position = workspace.WorkspaceStadiumMap.Goal11.Position
		end
	end
end

-- Script --

TopBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true

		dragStart = input.Position
		startPos = MainFrame.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

exitButton.MouseButton1Down:Connect(function()
	UI:Destroy()
end)

glitchBall.MouseButton1Down:Connect(function()
	if glitching then
		glitchBall.Text = "Glitch Ball: Disabled"
	else
		glitchBall.Text = "Glitch Ball: Enabled"
	end
	glitching = not glitching
end)

bringBall.MouseButton1Down:Connect(function()
	getBall()
	bringBallFunction()
end)

AutoReach.MouseButton1Down:Connect(function()
	if reaching then
		AutoReach.Text = "AutoReach: Disabled"
	else
		AutoReach.Text = "AutoReach: Enabled"
	end
	reaching = not reaching
end)

scoreGoal.MouseButton1Down:Connect(function()
	getBall()
	scoreGoalFunction()
end)
	
TopBar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		update(input)
	end
end)

game["RunService"].RenderStepped:Connect(function()
	checkForBall()
    reachingFunction()
	glitchBallFunction()
end)
